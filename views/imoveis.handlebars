<a href="/cadastrar"><button type="button" class="btn btn-success">Cadastrar Imóvel</button></a>

{{#if user}}

<a href="/logout"><button type="button" class="btn btn-success">Sair</button></a>

{{else}}

<a href="/login"><button type="button" class="btn btn-success">Entrar</button></a>

{{/if}}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Situação Do imóvel</th>
            <th scope="col">Tipo de imóvel</th>
            <th scope="col">Local</th>
            <th scope="col">Nome do proprietario</th>
            <th scope="col">Valor do imóvel</th>
          
        </tr>
    </thead>
    <tbody>
        {{#each imoveis}}
        <tr>
            <th>{{id}}</th>
            <td>{{situacao}}</td>
            <td>{{tipoDeImovel}}</td>
            <td>{{local}}</td>
            <td>{{nomeDoProprietario}}</td>
            <td>{{valor}}</td>
                <td>
                    <a href="/editar/{{id}}"><button type="submit" class="btn btn-warning">Editar</button></a>
                    <a href="/remover/{{id}}"><button type="submit" class="btn btn-danger">Apagar</button></a>
                </td>
        </tr>
        {{/each}}
    </tbody>
</table>
